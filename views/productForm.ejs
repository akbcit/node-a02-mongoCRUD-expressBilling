<div>
    <h3>
        <%= productId ? "Edit" : "New" %> Product
    </h3>
    <form action="/products<%= productId ? "/"+productId : "" %>/edit" method="POST">
        <input type="hidden" id="productId" name="productId" value="<%= productId %>">
        <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control" id="name" name="name" type="text" required value="<%= products.name ? products.name : '' %>">
        </div>
        <div class="form-group">
            <label for="code">Code:</label>
            <input class="form-control" id="code" name="code" type="text" required value="<%= products.code ? products.code : '' %>">
        </div>
        <div class="form-group">
            <label for="unitCost">Unit Cost:</label>
            <input class="form-control" id="unitCost" name="unitCost" type="text" required
                value="<%= products.unitCost ? products.unitCost : '' %>">
        </div>
        <button id="submit-btn" class="btn btn-primary" type="submit" value="Submit">Submit</button>
    </form>
</div>
<%= errorMessage %>